<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:textColor="#FFF"
        android:id="@+id/tvName"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/tvIssueFork"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#FFF"
        android:id="@+id/tvIssueFork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code was not accessible"
        app:layout_constraintBottom_toTopOf="@+id/btnSeeReadMe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="#FFF"
        android:background="@color/colorAccent"
        android:id="@+id/btnSeeReadMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See readme"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="#FFF"
        android:background="@color/colorAccent"
        android:id="@+id/btnSeeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See folder Contents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSeeReadMe" />

</androidx.constraintlayout.widget.ConstraintLayout>
